<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultActivityStyle"
    android:id="@+id/root"
    tools:context="nlusersi324201edwinvanrooij.fhict.httpathena.boodschappen_app.NewProduct">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/product_hint_name"
        android:maxLines="1"
        android:textSize="@dimen/new_product_text_size" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etName"
        android:ems="10"
        android:hint="@string/product_hint_amount"
        android:inputType="number"
        android:textSize="@dimen/new_product_text_size" />

    <EditText
        android:id="@+id/etRemark"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btnAdd"
        android:layout_below="@+id/etAmount"
        android:layout_centerHorizontal="true"
        android:gravity="top|start"
        android:hint="@string/product_hint_remark"
        android:textSize="@dimen/new_product_text_size_remark" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:drawableBottom="@drawable/ic_send_black_24dp"
        android:text="@string/product_new_btn_add" />

</RelativeLayout>
